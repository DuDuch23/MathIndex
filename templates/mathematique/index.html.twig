{% extends 'base.html.twig' %}

{% block title %}Hello MathematiqueController!{% endblock %}

{% block body %}
<div class="">
    <h2>Nouveautés<h2>
    <table class="container-exercises w-full table-fixed">
        <thead class="thead-exercises">
            <tr>
                <th class="table-size-clamp">Nom</th>
                <th class="table-size-clamp">Niveau</th>
                <th class="table-size-clamp">Thématique</th>
                <th class="table-size-clamp">Difficulté</th>
                <th class="table-size-clamp">Durée</th>
                <th class="table-size-clamp">Mots clés</th>
                <th class="table-size-clamp">Fichiers</th>
            </tr>
        </thead>
        <tbody>
            {% if nouveautes is defined %}
                {% if nouveautes is not empty %}
                    {% for nouveaute in nouveautes %}
                    <tr>
                        <td class="table-size-clamp info-exercise">{{ nouveaute.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ nouveaute.classroomId.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ nouveaute.thematicId.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ nouveaute.difficulty }}</td>
                        <td class="table-size-clamp info-exercise">{{ nouveaute.duration }}h</td>
                        <td class="flex table-size-clamp info-exercise">
                            <span class="keyword">{{ nouveaute.keywords }}</span>
                        </td>
                        
                        <td class="table-size-clamp info-exercise">
                            <span class="flex items-center px-2 py-1 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 active:bg-gray-200 hover:bg-gray-100 focus:outline-none focus:shadow-outline-gray">
                                <img class="w-4 h-4 mr-2" src="{{ asset('media/telecharger.png') }}">
                                <span class="text-center">Exercice</span>
                            </span>
                            <span class="flex items-center px-2 py-1 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 active:bg-gray-200 hover:bg-gray-100 focus:outline-none focus:shadow-outline-gray">
                                <img class="w-4 h-4 mr-2" src="{{ asset('media/telecharger.png') }}">
                                <span class="text-center">Corrigé</span>
                            </span>
                        </td>
                    </tr>
                    {% endfor %}
                {% endif %}
            {% endif %}
        </tbody>
    </table>
</div>
<div class="mt-9">
    <h2>Tous les exercises<h2>
    <table class="container-exercises w-full table-fixed">
        <thead class="thead-exercises">
            <tr>
                <th class="table-size-clamp">Nom</th>
                <th class="table-size-clamp">Niveau</th>
                <th class="table-size-clamp">Thématique</th>
                <th class="table-size-clamp">Difficulté</th>
                <th class="table-size-clamp">Durée</th>
                <th class="table-size-clamp">Mots clés</th>
                <th class="table-size-clamp">Fichiers</th>
            </tr>
        </thead>
        <tbody>
            {% if exercises is defined %}
                {% if exercises is not empty %}
                    {% for exercise in exercises %}
                    <tr>
                        <td class="table-size-clamp info-exercise">{{ exercise.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ exercise.classroomId.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ exercise.thematicId.name }}</td>
                        <td class="table-size-clamp info-exercise">{{ exercise.difficulty }}</td>
                        <td class="table-size-clamp info-exercise">{{ exercise.duration }}h</td>
                        <td class="flex table-size-clamp info-exercise">
                            <span class="keyword">{{ exercise.keywords }}</span>
                        </td>
                        
                        <td class="table-size-clamp info-exercise">
                            <span class="flex items-center px-2 py-1 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 active:bg-gray-200 hover:bg-gray-100 focus:outline-none focus:shadow-outline-gray">
                                <img class="w-4 h-4 mr-2" src="{{ asset('media/telecharger.png') }}">
                                <span class="text-center">Exercice</span>
                            </span>
                            <span class="flex items-center px-2 py-1 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 active:bg-gray-200 hover:bg-gray-100 focus:outline-none focus:shadow-outline-gray">
                                <img class="w-4 h-4 mr-2" src="{{ asset('media/telecharger.png') }}">
                                <span class="text-center">Corrigé</span>
                            </span>
                        </td>
                    </tr>
                    {% endfor %}
                {% endif %}
            {% endif %}
        </tbody>
    </table>
    {% if exercises is not empty %}
        {% if exercises is defined %}
            {% include "components/pagination.html.twig" with {
                route: 'mathematique',
                currentPage,
                countPages
            } only %}
        {% endif %}
    {% endif %}
</div>
{% endblock %}
