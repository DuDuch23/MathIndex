{% extends 'base.html.twig' %}

{% block title %}Éditer Compétence{% endblock %}

{% block body %}
<div class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Éditer Compétence</h1>
    {{ form_start(edit_form, {'attr': {'class': 'w-full'}}) }}
        <div class="mb-4">
            {{ form_label(edit_form.name, 'Nom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(edit_form.name, {'attr': {'class': 'shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full'}}) }}
            {{ form_errors(edit_form.name, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
        </div>
        <div class="mb-4">
            {{ form_label(edit_form.course_id, 'Cours associé', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(edit_form.course_id, {'attr': {'class': 'shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full'}}) }}
            {{ form_errors(edit_form.course_id, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
        </div>
    {{ form_end(edit_form) }}
</div>
{% endblock %}
