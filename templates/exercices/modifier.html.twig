{# templates/exercices/modifier.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier l'exercice{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-md shadow-md">
        <h1 class="text-2xl font-bold text-gray-700 mb-6">Modifier l'exercice</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div class="form-group">
            {{ form_label(form.name, 'Nom de l\'exercice', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.courseId, 'Matière associée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.courseId, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.difficulty, 'Niveau de difficulté', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.difficulty, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.thematicId, 'Thématique', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.thematicId, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.correctionFile, 'Fichier de correction', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.correctionFile, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.correction_file_id, 'Fichier de correction (optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.correction_file_id, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="flex justify-center mt-6">
            {{ form_widget(form.save, {'attr': {'class': 'btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
